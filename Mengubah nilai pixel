## Modify Pixel Value

import cv2
img = cv2.imread("image21.jpg", cv2.IMREAD_COLOR)

pixel = img [100, 100]
print ("Warna sebelum diubah : ", pixel)
img [100,100] = [255, 255, 255] 
img [101,100] = [255, 255, 255] 
img [102,100] = [255, 255, 255]
img [103,100] = [255, 255, 255] 
print("Warna setelah diubah : ", pixel)

cv2.imshow('Image', img)

cv2.waitKey (0)
cv2.destroyAllWindows ()
